extends layout

block content
  //h1= title
  h1= country
  doctype html
  head
    meta(charset='UTF-8')
    title InfoCountry
  form(action='http://localhost:3000/capital' method='post')
    | Enter Country to get Capital:
    input#country(type='text' name="country")
    button(type='submit')  Submit
  h3 #{capital}
  form(action='http://localhost:3000/population' method='post')
    | Enter Country to get Population:
    input#country(type='text' name="country")
    button(type='submit')  Submit
  h3 #{population}
  form(action='http://localhost:3000/currency' method='post')
    | Enter Country to get Currency:
    input#country(type='text' name="country")
    button(type='submit')  Submit
  h3 #{currency}